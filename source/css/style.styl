@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

 html, body
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  z-index: 100
  margin 0
  padding: 0

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

.sidebar-btn
  @media mq-mobile
    display none
  @media mq-normal
    position fixed
    z-index 999
    bottom 10px
    left 0
    cursor pointer

.right-sidebar-btn
  transform: rotateZ(180deg)
  -webkit-transition: -webkit-transform 1s ease-out
  -moz-transition: -moz-transform 1s ease-out
  -o-transition: -o-transform 1s ease-out
  -ms-transition: -ms-transform 1s ease-out 

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      width: 850px
      margin 0 auto
    @media mq-mobile
      margin-left 0 !important
      margin 0 auto

